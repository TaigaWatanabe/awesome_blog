<% provide(:title, "list of Users") %>
<div class="container">
    <<%= will_paginate %>
        <ul class="user">
            <% @users.each do |user| %>
                <li class="my-3">
                    <%= gravatar_for user, size: 52 %>
                    <%= link_to user.name, user%>
                    <%= link_to 'delete', user_path(user), class: 'text-danger', method: :delete, data:{ confirm: "Are you sure?" } unless !current_user?(user) %>
                </li>
            <% end %>
        </ul>
    <%= will_paginate %>
</div>